<html>
    <head>
        <title>Home</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
        <link rel="stylesheet" href="/styles.css">        
    </head>


   <% let movie_data = Object.keys(movie); %>


    <body>

        <div class="container">
            <div id="movie-details">
                <h1 class="text-center"><%= movie.title %></h1>
                <div class="row">
                    <div class="col-xs-5">
                        <img class="movie-poster" src= <%= movie.poster %> />
                    </div>
                    <div class="col-xs-7">
                        <table class="table">
        
                         

                           <%  for( i=0; i < movie_data.length; i++) {   %>
                              <%  if(movie_data[i]!== 'poster' && movie_data[i]!== 'title'){ %>
                                <tr>
                                <td> <%= movie_data[i] %></td>
                                <td> <%= movie[movie_data[i]] %></td>
                            </tr>
                            <% } %>
                                  <% } %>



                        </table>
                    </div>    
                </div>

                <div class="row">
                    <div class=buttons>
                        <a class="btn btn-primary" href=<%= '/' %>>Back</a>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>

