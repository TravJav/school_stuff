<html>
    <head>
        <title>Home</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
        <link rel="stylesheet" href="/styles.css">        
    </head>

    <body>
        <div class="container">
            <h1 class="text-center">Movie Database</h1>


                
         <% for( var i = 0; i < info.length; i++) { %>   



  
            <a class="movie-link" href= '<%= `/movie/${info[i].id}` %>'  >
            <div class="media movie-list-item">
                <div class="media-left">
                    <div class="poster-container">

                
                    
 
                <img class="media-object movie-poster" src= '<%=  info[i].poster %>' />
                    </div>
                </div>
                <div class="media-body">
                    <h4 class="media-heading">
                        <%= info[i].title %>
                        <span class="badge"> <%= info[i].rated %> </span>
                    </h4>  
                    <div>
                  
                        <%= info[i].plot %>
                    </div>
                    <div class="released-date">
                        Released: <%= info[i].released %>
                    </div>
                </div>
            </div>
            </a>
            
            <% } %>
        </div>

        
    </body>
</html>

